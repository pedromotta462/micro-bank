# Users Service Configuration
NODE_ENV=development
PORT=3002

# Application
APP_NAME=users-service
APP_VERSION=1.0.0

# Logging
LOG_LEVEL=debug

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=users_db
DATABASE_USER=users_user
DATABASE_PASSWORD=users_pass

# Prisma Database URL
DATABASE_URL="postgresql://users_user:users_pass@localhost:5433/users_db?schema=public"

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Redis Cache
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600
REDIS_USER_TTL=3600

# Message Queue
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_QUEUE=users

# AWS S3 Configuration
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_BUCKET=micro-bank-bucket
